export interface SimpleButtonProp {
    variant?: 'text' | 'elevated' | 'outlined' | 'contained' | 'contained-tonal',
    color?: 'primary' | 'secondary' | 'teritary' | 'info'
    width?: 'fullWidth' | string;
    onClick?: () => any;
    children?: React.ReactNode;
    disabled?: boolean;
    style?: React.CSSProperties;
    startIcon?: any | React.ReactNode;
    endIcon?: any | React.ReactNode;
    disableRipple?: boolean;
    height?: 'large' | 'extraSmall' | 'medium',
    iconColor?: string;
    component?: 'label';
    radiusBorder?: number;
    fill?: string
    isLoading?:boolean
    loaderColor?:'primary' | 'secondary' | 'teritary' 
    loaderSize?: 'small' | 'large'
}

